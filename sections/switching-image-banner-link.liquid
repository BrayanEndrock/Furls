<div class="slideshow-row section-id-{{ section.id }}" data-section-type="slideshow">

  {% if section.settings.link_url != blank %}<a href="{{ section.settings.link_url }}">{% endif %}
    
    {% unless section.settings.image == blank %}

    <div {% if section.settings.mobile_image != blank %}class="desktop-image"{%endif%}>
      <img src="{{section.settings.image | image_url: width: 1500}}">
    </div>
    {% if section.settings.mobile_image != blank %}
      <div class="mobile-image">
        <img src="{{section.settings.mobile_image | image_url: width: 1500}}">
      </div>
    {%endif%}      
    {% endunless %}

    
  {% if section.settings.link_url != blank %}</a>{% endif %}

</div>

<style type="text/css">
  #shopify-section-{{ section.id }} {
    position: relative;
    padding-top: 6vw;
    background: #F3F3F3;
    display: flex;
    justify-content:center;
  }
  #shopify-section-{{ section.id }} .cleaner-safer-badge {
    z-index: 9;
  }  
  #shopify-section-{{ section.id }} .mobile-image {
    display: none;
    visibility: hidden;
    opacity: 0;
  }
  @media screen and (max-width: 768px) {
    #shopify-section-{{ section.id }} .mobile-image {
    display: initial;
    visibility: visible;
    opacity: 1;
  }    
    #shopify-section-{{ section.id }} .desktop-image {
    display: none;
    visibility: hidden;
    opacity: 0;
  }    
    
  }

  #shopify-section-{{ section.id }} img {
    max-width: 100%;

  }

  #shopify-section-{{ section.id }} .desktop-image {
    

  }

  

  </style>

{% schema %}
  {
    "name": "Switching img banner+link",
    "settings": [
       {
          "type": "image_picker",
          "id": "image",
          "label": "Desktop Image"
       },
       {
         "type": "image_picker",
         "id": "mobile_image",
         "label": "Mobile Image"
       },
       {
         "type": "url",
         "id": "link_url",
         "label": "Banner link"
       },
       {
        "type": "checkbox",
        "id": "extra_padding",
        "label": "Pad around?"
      }
    ],
  "presets": [
	{
	  "name":"Switching banner with link"
	}
  ]
  }
{% endschema %}

