  KlaviyoSubscribe.attachToForms('#email_signup_yarnbowl', {
    hide_form_on_success: true,
    success_message: "Thanks for subscribing! Check your email for your discount code.",
    extra_properties: {
      $source: 'email-signup-yarnbowl'
