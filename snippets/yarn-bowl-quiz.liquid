  </label>
  <label class="option">
      <img loading="lazy" class="image3" src=""><br>
      <input type="radio" name="option" value="3" />
      <span class="option3"></span>
  </label>
  <label class="option">
      <img loading="lazy" class="image4" src=""><br>
      <input type="radio" name="option" value="4" />
      <span class="option4"></span>
  </label>
  <label class="option">
      <img loading="lazy" class="image5" src=""><br>
      <input type="radio" name="option" value="5" />
      <span class="option5"></span>
  </label>
  <label class="option">
      <img loading="lazy" class="image6" src=""><br>
      <input type="radio" name="option" value="6" />
      <span class="option6"></span>
  </label>
  </div>

  <!-- Buttons -->
  <div class="controls">
      <button class="previous">Previous</button>
      <button class="next">Next</button>
  </div>
</div>

<div class="result sixteen columns">

</div>

